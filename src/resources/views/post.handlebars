	<header class="tm-header" id="tm-header">
        <div class="tm-header-wrapper">
            <button class="navbar-toggler" type="button" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="tm-site-header">
                <div class="mb-3 mx-auto tm-site-logo"><i class="fas fa-laptop-code"></i></div>            
                <h1 class="text-center">IT Blog</h1>
            </div>
            <nav class="tm-nav" id="tm-nav">            
                <ul>
                    {{#if boss}}
                    <li class="tm-nav-item"><a href="#" class="tm-nav-link">
                        Welcome to IT Blog
                    </a></li>
                    {{/if}}
                    {{#ifEquals boss 1}}
                     <li class="tm-nav-item"><a href="/manager/post" class="tm-nav-link">
                        <i class="fas fa-clipboard-list"></i>
                        Manager
                    </a></li>
                      {{/ifEquals}}
                    <li class="tm-nav-item"><a href="/" class="tm-nav-link">
                        <i class="fas fa-home"></i>
                        Blog Home
                    </a></li>
                    <li class="tm-nav-item"><a href="/about" class="tm-nav-link">
                        <i class="fas fa-users"></i>
                        About me
                    </a></li>
                    <li class="tm-nav-item"><a href="/contact" class="tm-nav-link">
                        <i class="far fa-comments"></i>
                        Contact me
                    </a></li>
                    {{#if boss}}
                    <li class="tm-nav-item"><a href="/logout" class="tm-nav-link">
                        <i class="fas fa-key"></i>
                        Log out
                    </a></li>
                    {{/if}}
                    {{#ifEquals boss 0}}
                    <li class="tm-nav-item"><a href="/login" class="tm-nav-link">
                        <i class="fas fa-key"></i>
                        Log in
                    </a></li>
                  {{/ifEquals}}
                     
                    
                    
                </ul>
            </nav>
        </div>
    </header>
    <div class="container-fluid">
        <main class="tm-main">        
            <div class="row tm-row">
                <div class="col-lg-8 tm-post-col">
                    <div class="tm-post-full">                    
                        <div class="mb-4">
                            <h2 class="pt-2 tm-color-primary tm-post-title">{{posts.name}}</p>
                            <p style="font-size:16px; font-weight:200">
                                {{posts.desc}}
                            </p>
                            <p style="font-size:16px; font-weight:200">
                                {{posts.purport}}
                            </p>
                           
                        </div>
                        
                        <!-- Comments -->
                        <div>
                            <h2 class="tm-color-primary tm-post-title">Comments</h2>
                            <hr class="tm-hr-primary tm-mb-45">
                            <div class="comShow" id="{{posts._id}}" >
                            {{#each com}}
                            <div class="tm-comment tm-mb-45 com-item" id="{{this._id}}" style="cursor: pointer;">
                                <figure class="tm-comment-figure">
                                    <img src="/img/unknown.jpg" alt="Image" class="mb-2 rounded-circle img-thumbnail">
                                    <figcaption class="tm-color-primary text-center">{{this.name}}</figcaption>
                                </figure>
                                <div>
                                    <p style="max-width: 400px;word-break:break-all">
                                       {{this.purport}}
                                    </p>
                                    <div class="d-flex justify-content-between">

                                    </div>                                                 
                                </div>                                
                            </div>
                            {{/each}}
                            </div>
                            
                            <form class="mb-5 tm-comment-form" style="margin-top: 100px;">
                                <h2 class="tm-color-primary tm-post-title mb-4">Your comment</h2>
                                <div class="mb-4">
                                    <textarea class="form-control" id="commentPurport" name="message" rows="6"></textarea>
                                </div>
                                <div class="text-right">
                                    <button class="tm-btn tm-btn-primary tm-btn-small" id="messagebtn">Submit</button>                        
                                </div>                                
                            </form>                          
                        </div>
                    </div>
                </div>
                <aside class="col-lg-4 tm-aside-col">
                    <div class="tm-post-sidebar">
                        <hr class="mb-3 tm-hr-primary">
                        <h2 class="tm-mb-40 tm-post-title tm-color-primary">More Posts</h2>
                        {{#each more}}
                        <a href="/post/{{this._id}}" class="d-block tm-mb-40">
                            <figure>
                                <img src="{{this.img}}" alt="Image" class="mb-3 img-fluid">
                                <figcaption class="tm-color-primary" style="font-size: 15px;font-weight:200;color:#999">{{this.desc}}</figcaption>
                            </figure>
                        </a>
                        {{/each}}
                    </div>                    
                </aside>
            </div>
            <footer class="row tm-row">
            </footer>
        </main>
    </div>
<!-- Update Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Options</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
           <div class="form-group">
                    <label for="updatepurport">Purport:</label>
                    <textarea class="form-control" id="com-updatepurport"></textarea>
            </div>
           
   
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger deletecomclient">Delete comment</button>
        <button type="button" class="btn btn-success updatecomclient">Update comment</button>
      </div>
    </div>
  </div>
</div>
<!-- Delete Accept Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
           <div class="form-group">
                    <label for="deleteaccept">Are you sure you want to delete ?</label>
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger deletecomclientaccept">Delete now</button>
      </div>
    </div>
  </div>
</div>
    <script src="/js/templatemo-script.js"></script>
